//С++
//2.2.
#include <iostream>
using namespace std;

int gcd(int a, int b) {
    if (b == 0) {
        return a;
    }
    return gcd(b, a % b);
}

int main() {
    cout << "Результаты работы функции:" << endl;
    cout << "НОД(48, 18) = " << gcd(48, 18) << endl;
    cout << "НОД(56, 42) = " << gcd(56, 42) << endl;
    cout << "НОД(17, 13) = " << gcd(17, 13) << endl;
    cout << "НОД(100, 25) = " << gcd(100, 25) << endl;
    cout << "НОД(0, 5) = " << gcd(0, 5) << endl;
    
    return 0;
}

//Результаты работы функции:
//НОД(48, 18) = 6
//НОД(56, 42) = 14
//НОД(17, 13) = 1
//НОД(100, 25) = 25
//НОД(0, 5) = 5
